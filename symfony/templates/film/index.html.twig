{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        form{
            margin-bottom: 30px;
        }
    </style>
    {{ include('header.html.twig') }}

    {{ include('form.html.twig') }}
    
    <div class="container-fluid "> 
        <div class="col">
            <div class="row">
                <div class="jumbotron jumbotron-fluid col-md-12" 
                style="
                    padding-top: 24px;
                    padding-bottom: 24px;
                    background-color: #56c7d6;
                    color: white;
                ">
                    <h1 class="display-4">Films</h1>
                </div>
            </div>
        
            <div class="row" 
                style="
                    display: flex;
                    justify-content: center;
            ">
                {% for item in liste %}
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="{{ item.Poster }}" alt="Card image cap" 
                            style="width: 18rem;
                                height: 27rem; ">
                        <div class="card-body">
                            <h5 class="card-title">{{ item.Title }}</h5>
                            <h5 class="card-title">{{ item.imdbID }}</h5>
                            <p class="card-text">{{ item.Year }}</p>
                            <a href="{{url('FilmSelectionne', 
                                { 'link': item.imdbID  })}}" class="btn btn-primary bouton_details" 
                                style="
                                    background-color: #FFEB3B;
                                    border-color: #FFEB3B;
                            ">Plus de d√©tails</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {{ include('lien.html.twig') }}

{% endblock %}