{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="{{ film.Poster }}" alt="Card image cap">
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    {{ film.Title }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ film.Year }}</h5>
                    <h5 class="card-title">{{ film.Genre }}</h5>
                    <h5 class="card-title">{{ film.Director }}</h5>
                    <p class="card-text">{{ film.Plot }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}